<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <TextureView
        android:id="@+id/texture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_takepicture"
            android:layout_width="@dimen/clickBtn_height"
            android:layout_height="@dimen/clickBtn_height"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/ic_camera_24px"
            android:layout_gravity="center_horizontal|bottom"
            />
        <ImageView
            android:id="@+id/gallery_btn"
            android:layout_width="@dimen/galleryBtn_height"
            android:layout_height="@dimen/galleryBtn_height"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="16dp"
            android:layout_gravity="center_horizontal|bottom|end"
            android:src="@drawable/ic_collections_black_24dp"
            />
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:layout_gravity="center"
        android:visibility="gone"
        android:id="@+id/progress_bar"
        />
</FrameLayout>